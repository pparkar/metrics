  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ns.adobe.com/nfp/spl/graph/processing",
  "version": "0.1",
  "meta:abstract": false,
  "meta:extensible": false,
  "type": "object",
  "title": "Request format for spl graph processing",
  "description": "Format for requesting processing on an SPL graph ",
  "definitions": {
    "processing": {
      "properties": {
        "graph": {
          "oneOf": [
            {
              "properties": {
                "uri": {
                  "type": "string",
                  "description": "uri reference to graph."
                }
              },
              "required": ["uri"]
            },
            {
              "properties": {
                "code": {
                  "type": "object",
                  "description": "Embedded SPL graph as a JSON object"
                }
              },
              "required": ["code"]
            }
          ],
          "type": "object",
          "description": "Either an SPL graph reference or the SPL graph itself"
        },
        "params": {
          "type": "object",
          "description": "Embedded SPL parameters as a JSON object"
        },
        "inputs": {
          "description": "SPL Inputs",
          "patternProperties": {
            "^[a-zA-Z0-9\\-_\\/]+$": {
              "oneOf": [
                { "$ref": "#/definitions/spl_ref_input" },
                { "$ref": "#/definitions/spl_scalar_input" },
                { "$ref": "#/definitions/spl_string_input" },
                { "$ref": "#/definitions/spl_boolean_input"},
                { "$ref": "#/definitions/spl_array_input"},
                { "$ref": "#/definitions/spl_image_input" },
                { "$ref": "#/definitions/spl_buffer_input" }
              ]
            }
          }
        },
        "outputs": {
          "description": "SPL Outputs",
          "patternProperties": {
            "^[a-zA-Z0-9\\-_\\/]+$": {
              "oneOf": [
                { "$ref": "#/definitions/spl_ref_output" },
                { "$ref": "#/definitions/spl_scalar_output" },
                { "$ref": "#/definitions/spl_string_output" },
                { "$ref": "#/definitions/spl_boolean_output"},
                { "$ref": "#/definitions/spl_array_output"},
                { "$ref": "#/definitions/spl_image_output" },
                { "$ref": "#/definitions/spl_buffer_output" }
              ]
            }
          }
        }
      }
    },
    "spl_ref_input": {
      "properties": {
        "id": {
          "type": "string"
        },
        "uri": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "string_ref",
            "scalar_ref",
            "boolean_ref",
            "array_ref",
            "image_ref",
            "buffer_ref"
          ]
        },
        "binding": {
          "$ref": "#/definitions/input_bindings"
        }
      },
      "required": ["id", "uri" ,"type"]
    },
    "spl_scalar_input": {
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "default": "scalar",
          "enum": [
            "scalar"
          ]
        },
        "value": {
          "type": "number"
        },
        "binding": {
          "$ref": "#/definitions/input_bindings"
        }
      },
      "required": ["id", "type", "value"]
    },
    "spl_string_input": {
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "default": "string",
          "enum": [
            "string"
          ]
        },
        "value": {
          "type": "string"
        },
        "binding": {
          "$ref": "#/definitions/input_bindings"
        }
      },
      "required": ["id", "type", "value"]
    },
    "spl_boolean_input": {
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "default": "boolean",
          "enum": [
            "boolean"
          ]
        },
        "value": {
          "type": "boolean"
        },
        "binding": {
          "$ref": "#/definitions/input_bindings"
        }
      },
      "required": ["id", "type", "value"]
    },
    "spl_array_input": {
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "default": "array",
          "enum": [
            "array"
          ]
        },
        "value": {
          "type": "array",
          "items": {
            "oneOf": [
              { "$ref": "#/definitions/spl_scalar_input" },
              { "$ref": "#/definitions/spl_string_input" },
              { "$ref": "#/definitions/spl_boolean_input"},
              { "$ref": "#/definitions/spl_array_input"},
              { "$ref": "#/definitions/spl_ref_input" }
            ]
          }
        },
        "binding": {
          "$ref": "#/definitions/input_bindings"
        }
      },
      "required": ["id", "type", "value"]
    },
    "spl_image_input": {
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "default": "image",
          "enum": [
            "image"
          ]
        },
        "binding": {
          "$ref": "#/definitions/input_bindings"
        }
      },
      "required": ["id", "type"]
    },
    "spl_buffer_input": {
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "default": "buffer",
          "enum": [
            "buffer"
          ]
        },
        "binding": {
          "$ref": "#/definitions/input_bindings"
        }
      },
      "required": ["id", "type"]
    },
    "spl_ref_output": {
      "properties": {
        "id": {
          "type": "string"
        },
        "uri": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "string_ref",
            "scalar_ref",
            "boolean_ref",
            "array_ref",
            "image_ref",
            "buffer_ref"
          ]
        },
        "binding": {
          "$ref": "#/definitions/output_bindings"
        }
      },
      "required": ["id", "type"]
    },
    "spl_scalar_output": {
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "default": "scalar",
          "enum": [
            "scalar"
          ]
        },
        "binding": {
          "$ref": "#/definitions/output_bindings"
        }
      },
      "required": ["id", "type"]
    },
    "spl_string_output": {
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "default": "string",
          "enum": [
            "string"
          ]
        },
        "binding": {
          "$ref": "#/definitions/output_bindings"
        }
      },
      "required": ["id", "type"]
    },
    "spl_boolean_output": {
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "default": "boolean",
          "enum": [
            "boolean"
          ]
        },
        "binding": {
          "$ref": "#/definitions/output_bindings"
        }
      },
      "required": ["id", "type"]
    },
    "spl_array_output": {
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "default": "array",
          "enum": [
            "array"
          ]
        },
        "binding": {
          "$ref": "#/definitions/output_bindings"
        }
      },
      "required": ["id", "type"]
    },
    "spl_image_output": {
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "default": "image",
          "enum": [
            "image"
          ]
        },
        "binding": {
          "$ref": "#/definitions/output_bindings"
        }
      },
      "required": ["id", "type"]
    },
    "spl_buffer_output": {
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "default": "buffer",
          "enum": [
            "buffer"
          ]
        },
        "binding": {
          "$ref": "#/definitions/output_bindings"
        }
      },
      "required": ["id", "type"]
    },
    "input_bindings": {
      "oneOf": [
        { "$ref": "#/definitions/bind_target_store" }
      ]
    },
    "output_bindings": {
      "oneOf": [
        { "$ref": "#/definitions/bind_target_store" },
        { "$ref": "#/definitions/bind_target_canvas" },
        { "$ref": "#/definitions/bind_target_client" },
        { "$ref": "#/definitions/bind_target_other" }
      ]
    },
    "bind_target_store": {
      "properties": {
        "toStore": {
          "type": "object",
          "properties": {
            "lifeCycle": {
              "type": "string",
              "default": "session",
              "enum": [
                "session",
                "owner"
              ]
            }
          }
        }
      }
    },
    "bind_target_canvas": {
      "properties": {
        "toCanvas": {
          "type": "object",
          "properties": {
            "uuid": {
              "type": "string"
            }
          }
        }
      }
    },
    "bind_target_client": {
      "properties": {
        "toClient": {
          "type": "object"
        }
      }
    },
    "bind_target_other": {
      "properties": {
        "to": {
          "type": "object"
        }
      }
    }

  },
  "allOf": [
    {
      "$ref": "#/definitions/processing"
    },
    {
      "required": ["graph", "params", "inputs", "outputs"]
    }
  ]
}
